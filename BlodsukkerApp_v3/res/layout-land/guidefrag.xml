<?xml version="1.0" encoding="utf-8"?>
<diverse.FrameLayoutPct xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/guidefrag"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@xml/tiled_background_white"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@xml/ramme"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/hjem_knap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:src="@drawable/hjem_knap" />

            <ImageView
                android:id="@+id/next_pil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dip"
                android:paddingBottom="15dp"
                android:rotation="0.0"
                android:src="@drawable/forsaet_knap" />

            <ScrollView
                android:id="@+id/ScrollView01"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_toRightOf="@+id/next_pil" >

                <TextView
                    android:id="@+id/guideText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/hjem_knap"
                    android:background="@xml/tekstunderlag1"
                    android:paddingBottom="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="15dp"
                    android:text="@string/GuideFrag1"
                    android:textColor="#FFFFFF" />
            </ScrollView>
        </RelativeLayout>
    </RelativeLayout>

</diverse.FrameLayoutPct>