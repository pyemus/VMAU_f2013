<?xml version="1.0" encoding="utf-8"?>
<diverse.FrameLayoutPct xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/guidefrag"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@xml/tiled_background_white"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@xml/ramme"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/hjem_knap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dip"
                android:layout_marginBottom="10dip"
                android:src="@drawable/hjem_knap" />

<!--             <Button -->
<!--                 android:id="@+id/hjem_knap" -->
<!--                 android:layout_width="wrap_content" -->
<!--                 android:layout_height="wrap_content" -->
<!--                 android:layout_centerHorizontal="true" -->
<!--                 android:layout_marginTop="10dip" -->
<!--                 android:text="Hjem" /> -->

            <TextView
                android:id="@+id/guideText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hjem_knap"
                android:layout_centerHorizontal="true"
                android:background="@xml/tekstunderlag1"
                android:paddingBottom="25dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:paddingTop="25dp"
                android:text="@string/GuideFrag1"
                android:textColor="#FFFFFF" />

            <ImageView
                android:id="@+id/next_pil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/guideText1"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:paddingBottom="15dp"
                android:rotation="0.0"
                android:src="@drawable/forsaet_knap" />
        </RelativeLayout>
    </RelativeLayout>

</diverse.FrameLayoutPct>